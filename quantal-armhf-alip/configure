#!/bin/sh

# (C) 2012 Fathi Boudra <fathi.boudra@linaro.org>

# Create configuration for live-build.

# You need live-build package installed.

set -e

echo "I: create configuration"
export LB_BOOTSTRAP_INCLUDE="apt-transport-https gnupg"
lb config \
 --apt-indices none \
 --apt-secure false \
 --architectures armhf \
 --archive-areas 'main universe' \
 --binary-filesystem ext4 \
 --binary-images tar \
 --bootappend-live "hostname=odroid-alip username=odroid" \
 --bootstrap-qemu-arch armhf \
 --bootstrap-qemu-static /usr/bin/qemu-arm-static \
 --cache false \
 --chroot-filesystem none \
 --compression gzip \
 --distribution quantal \
 --gzip-options '-9 --rsyncable' \
 --iso-publisher 'Linaro; http://www.linaro.org/; linaro-dev@lists.linaro.org' \
 --iso-volume 'Linaro quantal $(date +%Y%m%d-%H:%M)' \
 --linux-flavours none \
 --linux-packages none \
 --mirror-bootstrap "http://localhost/~ubuntu/quantal" \
 --mode ubuntu \
 --security false \
 --system normal \
 --updates false \
 --apt-recommends false

echo "I: copy customization"
cp -rf customization/* config/

echo "I: done"
